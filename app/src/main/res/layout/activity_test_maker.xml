<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question Editor: "
        android:padding="10dp"/>

    <LinearLayout
        android:layout_below="@+id/tv_title"
        android:id="@+id/ll_question_maker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add question: "
            android:padding="5dp"/>

        <EditText
            android:id="@+id/et_add_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add answer to question: "
            android:padding="5dp"/>

        <EditText
            android:id="@+id/et_add_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add answer selections to question: "
            android:padding="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="i   )"/>
            <EditText
                android:id="@+id/et_add_answer_selection1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ii  )"/>
            <EditText
                android:id="@+id/et_add_answer_selection2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="iii )"/>
            <EditText
                android:id="@+id/et_add_answer_selection3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_add_selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preview of question: "
            android:padding="5dp"/>

        <LinearLayout
            android:id="@+id/preview_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/custom_background">

            <TextView
                android:id="@+id/tv_preview_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preview of question"
                android:padding="5dp"
                />

            <RadioGroup
                android:id="@+id/rg_answer_selections"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <RadioButton
                    android:id="@+id/rb_selection1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/rb_selection2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/rb_selection3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/rb_selection4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_discard"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_question_maker"
        android:text="Discard"
        />

    <Button
        android:id="@+id/btn_create_question"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_question_maker"
        android:layout_alignRight="@+id/ll_question_maker"
        android:text="Create Question"/>

</RelativeLayout>